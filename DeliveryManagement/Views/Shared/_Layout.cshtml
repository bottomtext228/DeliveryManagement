<body>
    <header>

        <nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" aria-current="page" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt=""></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " aria-current="page" asp-controller="Catalog" asp-action="All">Каталог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " aria-current="page" href="info.html">О нас</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-nav dropdown-menu-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Account" asp-action="Profile">Профиль</a>
                        </li>
                    }
                    else
                    {

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Account" asp-action="Login">Вход</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " aria-current="page" asp-controller="Account" asp-action="Register">Регистрация</a>
                        </li>

                    }
                </div>
