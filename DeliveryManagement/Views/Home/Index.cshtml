<div class="modal bg-secondary py-5 fade" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-5 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <!-- <h5 class="modal-title">Заголовок модального окна</h5> -->
                <h2 class="fw-bold mb-0">Войдите в систему</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-5 pt-0">
                <form class="">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control rounded-4" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Адрес электронной почты</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control rounded-4" id="floatingPassword" placeholder="Пароль">
                        <label for="floatingPassword">Пароль</label>
                    </div>
                    <button class="w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit">Войти</button>
                    <a href="login.html">
                        <button class="w-100 mb-2 btn btn-lg rounded-4 btn-warning"
                                type="button">
                            Зарегистрироваться
                        </button>
                    </a>
                    <small class="text-muted">Нажимая «Войти», вы соглашаетесь с условиями использования.</small>
                    <hr class="my-4">
                </form>
            </div>
        </div>
    </div>
</div>
