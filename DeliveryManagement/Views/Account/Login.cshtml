@using DeliveryManagement.ViewModels.Account;
@model LoginViewModel



<div class="modal bg-secondary py-5 d-block" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-5 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h2 class="fw-bold mb-0">Войдите в систему</h2>
                <a asp-controller="Home" asp-action="Index" class="btn-close"></a>
            </div>
            <div class="modal-body p-5 pt-0">
                <form method="post" asp-controller="Account" asp-action="Login">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control rounded-4" placeholder="name@example.com">
                        <label asp-for="Email">Адрес электронной почты</label>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control rounded-4" placeholder="Пароль">
                        <label asp-for="Password">Пароль</label>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <button class="w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit">Войти</button>
                    <a asp-controller="Account" asp-action="Register" class="w-100 mb-2 btn btn-lg rounded-4 btn-warning">
                        Зарегистрироваться
                    </a>
                    <small class="text-muted">Нажимая «Войти», вы соглашаетесь с условиями использования.</small>
                    <hr class="my-4">
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}