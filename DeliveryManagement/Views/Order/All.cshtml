@model DeliveryManagement.ViewModels.Order.AllViewModel;


<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-1">
            </div>
            <div class="col-lg-11" style="font-size: 40px; font-weight: bold;">
                Мои заказы
            </div>
        </div>
        @foreach (var order in Model.Orders)
        {
            <div class="row">
                <div class="col-lg-1">
                </div>
                <div class="col-lg-2 col-md-3">
                    <a asp-controller="Order" asp-action="Get" asp-route-id="@order.OrderId">
                        <div class="card">

                            <img src="data:image/png;base64, @Convert.ToBase64String(order.Product.Image)" class="card-img-top"
                                 alt="...">

                            <div class="card-body">
                                <h5 class="card-title"><span style="color: orange;">@order.Product.Name</span></h5>
                            </div>

                        </div>
                    </a>
                </div>
                <div class="col-lg-1">
                </div>


            </div>
        }
    </div>
</section>