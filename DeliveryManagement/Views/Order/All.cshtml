@model DeliveryManagement.ViewModels.Order.AllViewModel;


<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-1">
            </div>
            <div class="col-lg-11" style="font-size: 40px; font-weight: bold;">
                Мои заказы
            </div>
        </div>
        @foreach (var order in Model.Orders)
        {
            <div class="row">
                <div class="col-lg-1">
                </div>
                <div class="col-lg-2 col-md-3">
                    <div class="card">
                        <a asp-controller="Order" asp-action="Order" asp-route-id="@order.OrderId">
                            <img src="data:image/png;base64, @Convert.ToBase64String(order.Product.Image)" class="card-img-top"
                                 alt="...">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><a href="storepage.html" style="color: orange;">@order.Product.Name</a></h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1">
                </div>


            </div>
        }
    </div>
</section>